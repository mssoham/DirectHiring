<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Base_color_green"
    tools:context="afroradix.xigmapro.com.directhiringcom.SignupFirstPage">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/signinlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/helperlogo"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_40"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/signinlogo">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/White">

                    <EditText
                        android:id="@+id/user_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:singleLine="true"
                        android:hint="@string/hint_first_name"
                        android:theme="@style/MyEditTextTheme"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/White">

                    <EditText
                        android:id="@+id/input_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_last_name"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:theme="@style/MyEditTextTheme"/>
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">
                    <Spinner
                        android:id="@+id/date"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_40"
                        android:popupBackground="@drawable/edttextbg"
                        android:background="@drawable/spinner_load"/>
                    <Spinner
                        android:id="@+id/month"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_25"
                        android:popupBackground="@drawable/edttextbg"
                        android:background="@drawable/spinner_load"/>
                    <Spinner
                        android:id="@+id/year"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:popupBackground="@drawable/edttextbg"
                        android:background="@drawable/spinner_load"/>
                </LinearLayout>
                <Spinner
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/spinner_load"
                    android:layout_marginTop="@dimen/dp_15"
                    android:popupBackground="@drawable/edttextbg"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/White">

                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:theme="@style/MyEditTextTheme"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_confirm_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/White">

                    <EditText
                        android:id="@+id/confirm_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_confirm_email"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:theme="@style/MyEditTextTheme"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/loginbtns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Deep_green"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">
                <Button
                    android:id="@+id/sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edttextbg"
                    android:text="@string/signup"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/White"/>
                <TextView
                    android:id="@+id/signup_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_facebook"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/White"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
