<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_myprofile"
    tools:context="afroradix.xigmapro.com.directhiringcom.MYProfile">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linr_first"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/dashboard_top"
                android:orientation="vertical"
                android:gravity="top">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_below="@+id/linr_first"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_150"
                    android:gravity="center_horizontal">

                    <custom_components.RoundedImageViewWhiteBorder
                        android:layout_width="@dimen/dp_150"
                        android:layout_height="@dimen/dp_150"
                        android:src="@drawable/placeholder"
                        android:id="@+id/img_my_prfl"
                        />

                    <RelativeLayout
                        android:id="@+id/rel_cross"
                        android:layout_width="@dimen/dp_145"
                        android:layout_height="@dimen/dp_150"
                        android:background="@drawable/rounded_background_black"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_3"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:alpha=".5"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></LinearLayout>
                        <ImageView
                            android:id="@+id/imgchange"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:src="@drawable/camera_background"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kolkata"
                android:layout_below="@+id/linr_first"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_100"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kolkata"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:layout_below="@+id/name_user"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:background="#e8e8e8"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_80">
                <TextView
                    android:id="@+id/type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/profile_and_requirement"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_22"
                    android:padding="@dimen/dp_10"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/prfldetails_fields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="no quotes added yet!add your quote here only!"
                        android:lines="3"
                        android:scrollbars="vertical"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:layout_marginLeft="@dimen/dp_10"/>
                </ScrollView>
            <LinearLayout
                android:id="@+id/edit_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">
                <Button
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/edit"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="@color/Base_color_green"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lookinf_for"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_22"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/black"/>
                <RelativeLayout
                    android:id="@+id/rlayout_job"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:padding="@dimen/dp_10">
                <ListView
                    android:id="@+id/list_criteria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/spinner_bottom_line"
                    android:dividerHeight="2dp"
                    android:layout_marginTop="0dp"
                    >
                </ListView>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/details_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5">
                <Button
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@mipmap/edit"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textColor="@color/Base_color_green"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_20"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
