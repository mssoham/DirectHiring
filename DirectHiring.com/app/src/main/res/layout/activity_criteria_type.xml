<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Base_color_green"
    tools:context="afroradix.xigmapro.com.directhiringcom.CriteriaType">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="1dp">
            <ImageView
                android:id="@+id/signinlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/helperlogo"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_30"/>
            <CheckBox
                android:id="@+id/nationality_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nationality"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/White"
                android:layout_marginTop="@dimen/dp_30"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:theme="@style/MyEditTextTheme"
                />
            <Spinner
                android:id="@+id/nationality"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/spinner_background_1"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:popupBackground="@drawable/edttextbg"
                android:theme="@style/MyEditTextTheme"
                android:visibility="gone"/>
            <CheckBox
                android:id="@+id/main_duty_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_duty"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/White"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:theme="@style/MyEditTextTheme"
                />
            <Spinner
                android:id="@+id/main_duty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/spinner_background_1"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:popupBackground="@drawable/edttextbg"
                android:theme="@style/MyEditTextTheme"
                android:visibility="gone"/>
            <CheckBox
                android:id="@+id/availibility_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/availibility"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/White"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:theme="@style/MyEditTextTheme"
                />
            <Spinner
                android:id="@+id/availibility"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/spinner_background_1"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:popupBackground="@drawable/edttextbg"
                android:theme="@style/MyEditTextTheme"
                android:visibility="gone"/>
            <CheckBox
                android:id="@+id/exp_range_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exp_range"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/White"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:theme="@style/MyEditTextTheme"
                />
            <Spinner
                android:id="@+id/exp_range"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/spinner_background_1"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:popupBackground="@drawable/edttextbg"
                android:theme="@style/MyEditTextTheme"
                android:visibility="gone"/>
            <CheckBox
                android:id="@+id/sal_range_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sal_range"
                android:textSize="@dimen/sp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/White"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:theme="@style/MyEditTextTheme"
                />

            <CheckBox
                android:id="@+id/age_range_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age_range"
                android:textSize="@dimen/sp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/White"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:theme="@style/MyEditTextTheme"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/seekbar_background"
                    android:textColor="#fff"
                    android:text="min"
                    android:id="@+id/seekValuemin" />

                <TextView
                    android:id="@+id/seekValuemax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingBottom="20dp"
                    android:text="max"
                    android:background="@drawable/seekbar_background"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:layout_marginRight="10dp" />
                <custom_components.RangeSeekBar
                    android:id="@+id/sal_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"/>
            </RelativeLayout>
            <CheckBox
                android:id="@+id/day_of_range_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_of_range"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/White"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:theme="@style/MyEditTextTheme"
                />
            <LinearLayout
                android:id="@+id/loginbtns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Deep_green"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:padding="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20">
                <Button
                    android:id="@+id/continue_btn_last"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edttextbg"
                    android:text="@string/continue_btn"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/White"/>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
</RelativeLayout>
