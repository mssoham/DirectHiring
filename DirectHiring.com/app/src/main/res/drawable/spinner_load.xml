<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- If you want to add some padding -->
    <!-- Here is the corner radius -->
    <item><layer-list>
        <item><shape>
            <gradient android:angle="90"
                android:endColor="#BCE08A" android:startColor="#BCE08A" android:type="linear" />

            <corners android:radius="5dp" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>
        <item android:top="10dp"
            android:right="15dp"><bitmap android:gravity="top|right"  android:src="@drawable/downarrow" />   // you can use any other image here, instead of default_holo_dark_am
        </item>
    </layer-list></item>
</selector>